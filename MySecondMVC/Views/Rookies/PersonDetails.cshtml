@model MySecondMVC.Models.Person
@{
    ViewData["Title"] = "Person Details";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h2 class="mb-4">Details for @Model.FullName</h2>

    <ul class="list-group">
        <li class="list-group-item"><strong>Gender:</strong> @Model.Gender</li>
        <li class="list-group-item"><strong>Age:</strong> @Model.Age</li>
        <li class="list-group-item"><strong>Date of Birth:</strong> @Model.DateOfBirth</li>
        <li class="list-group-item"><strong>Phone:</strong> @Model.PhoneNumber</li>
        <li class="list-group-item"><strong>Birth Place:</strong> @Model.BirthPlace</li>
        <li class="list-group-item"><strong>Graduated:</strong> @(Model.IsGraduated ? "Yes" : "No")</li>
    </ul>

    <div class="mt-4">
        <a class="btn btn-danger" href="@Url.Action("DeletePerson", new { id = Model.Id })">Delete</a>
        <a class="btn btn-secondary ms-2" href="@Url.Action("Index")">Back to List</a>
    </div>
</div>