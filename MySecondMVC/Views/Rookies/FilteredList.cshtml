@model List<MySecondMVC.Models.Person>
@{
    ViewData["Title"] = "Filtered People";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h2 class="mb-3">Filtered List</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">
            No matching people found.
        </div>
    }
    else
    {
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Full Name</th>
                    <th>Birth Place</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var person in Model)
                {
                    <tr>
                        <td>
                            <a href="@Url.Action("PersonDetails", new { id = person.Id })">@person.FullName</a>
                        </td>
                        <td>@person.BirthPlace</td>
                        <td>
                            <a class="btn btn-sm btn-warning" href="@Url.Action("EditPerson", new { id = person.Id })">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <a class="btn btn-secondary mt-3" href="@Url.Action("Index")">Back to List</a>
</div>